<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgBookBill"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/nameBookBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_toEndOf="@id/imgBookBill"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/priceBookBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000000"
        android:textColor="@color/red"
        android:layout_below="@id/nameBookBill"
        android:layout_alignStart="@id/nameBookBill"
        android:layout_marginBottom="10dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserBorrowBill"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/priceBookBill"
        android:layout_alignStart="@id/priceBookBill"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/nameUserBorrowBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@id/imgUserBorrowBill"
        android:layout_centerVertical="true"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/addressUserBorrowBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đây là địa chỉ của người cho mượn"
        android:layout_below="@id/imgUserBorrowBill"
        android:layout_alignStart="@id/imgUserBorrowBill"/>

</RelativeLayout>